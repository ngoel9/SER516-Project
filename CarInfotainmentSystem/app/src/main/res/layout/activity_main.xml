<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="alertactivity.ngoel9.msse.asu.edu.carinfotainmentsystem.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:id="@+id/bluetooth_switch"
        android:checked="false"
        android:enabled="true"
        android:textColor="#dfefb8"
        android:layout_alignTop="@+id/mute_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Control Power"
        android:id="@+id/power_switch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:enabled="true"
        android:textColor="#dfefb8"
        android:layout_alignRight="@+id/mute_switch"
        android:layout_alignEnd="@+id/mute_switch" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute/Unmute"
        android:id="@+id/mute_switch"
        android:checked="true"
        android:enabled="true"
        android:layout_above="@+id/power_switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="61dp"
        android:textColor="#dfefb8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/call_button"
        android:background="#00000000"
        android:textColor="#dfefb8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/in_btn"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mute_switch"
        android:layout_toStartOf="@+id/mute_switch"
        android:background="@drawable/mic_art"
        android:onClick="listenButtonOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Off"
        android:id="@+id/screen_btn"
        android:background="#00000000"
        android:textColor="#dfefb8"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mute_switch"
        android:layout_alignEnd="@+id/mute_switch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speech"
        android:id="@+id/Speech"
        android:layout_below="@+id/in_btn"
        android:layout_alignLeft="@+id/in_btn"
        android:layout_alignStart="@+id/in_btn"
        android:layout_toLeftOf="@+id/mute_switch"
        android:layout_toStartOf="@+id/mute_switch"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#dfefb8" />
</RelativeLayout>
